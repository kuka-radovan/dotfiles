# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Enable `vi` editing mode.
# https://www.gnu.org/savannah-checkouts/gnu/bash/manual/bash.html#Readline-vi-Mode

set -o vi

# Changing Directory
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

setopt autocd           # Automatically prepend `cd` to directory names.
setopt autopushd        # Automatically push directory on dirstack.
setopt nopushdsilent    # Do not print the directory stack after pushd or popd.
setopt pushdignoredups  # Do not push multiple copies of the same directory onto the directory stack.

# Shell Completion
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

setopt correct          # Autocorrect typos in path names when using the `cd` command.
setopt no_listbeep      # Disable beep when completing ambiguous glob patterns.
setopt listpacked       # Varaible col width for multi-column lists.

# Shell Expansion and Globbing
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

setopt extendedglob     # Enable extended globbing (#, ~, ^).
setopt nocaseglob       # Match filenames in a case-insensitive fashion when performing filename expansion.
setopt dotglob          # Include filenames beginning with a "." in the filename expansion.

# History and History Expansion
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

setopt no_histbeep      # Disable beep when accessing nonexistent history.
setopt histignoredups   # Do not enter command lines into the history list if they are duplicates of the previous event.
setopt histnostore      # Do not enter command lines into the history list.
setopt histreduceblanks # Remove superfluous blanks before adding lines to the history.
setopt sharehistory     # Share history between all sessions.
setopt histappend       # Append history lines to the history file rather than overwriting the file.
